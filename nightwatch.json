  },

  "test_settings" : {
    "default" : {
      "launch_url": "https://trello.com",
      "desiredCapabilities": {
        "browserName": "chrome",
        "chromeOptions": {
          "w3c": false,
          "args": [
						"--headless"
					]
        }
      }
    }
  }
}